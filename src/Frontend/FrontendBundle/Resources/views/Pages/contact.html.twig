{% block body %}
    <div class="cover-contact col-lg-12 col-xs-12 "> <h1>Contactez Nous 7j /7</h1></div>
    <div class="container ">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 interligne ">
            <h3>Information contact</h3>
            <p><span class="glyphicon glyphicon-envelope" aria-hidden="true"> </span> <b> Adresse </b><br /><br /> 15 Avenue Al Abtal Agadal <br />Rabat, Maroc  </p>
            <p><br /><span class="glyphicon glyphicon-phone" aria-hidden="true"> </span> <b> Numéro de Téléphone : </b> <br /><br /> 06 25 14 78 49  <br /> </p>
        </div>

        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 interligne ">
            <h3>Nous envoyez un message</h3>

            <div class="form-group ">
                <form >
                    <div class="input-group con input-group-sm">
                        <span class="input-group-addon" id="sizing-addon2"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        <input type="text" class="form-control" placeholder="Votre Nom et Prénom * " aria-describedby="sizing-addon1"/>
                    </div>
                    <div class="input-group con input-group-sm">
                        <span class="input-group-addon" id="sizing-addon1"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                        <input type="text" class="form-control" placeholder="Votre E-mail * " aria-describedby="sizing-addon1"/>
                    </div>

                    <div class="input-group con input-group-sm">
                        <span class="input-group-addon" id="sizing-addon2"><span class="glyphicon glyphicon-phone" aria-hidden="true"></span></span>
                        <input type="text" class="form-control" placeholder="Votre Numéro de Téléphone * " aria-describedby="sizing-addon1"/>
                    </div>



                    <textarea class="form-control input-sm con" placeholder="votre message *"></textarea>


                    <button type="file" title="valider" class="btn btn-primary btn-sm con ">Envoyer </button>
                    <button type="reset" title="valider" class="btn clear-form con">* Effacer</button>
                    <br />
                    <p>* les champs obligatoire</p>

                </form>
            </div>

        </div>
    </div>


    <div id="map"></div>

{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}
{% block javascriptsFooter %}
    {{ parent() }}
    <script>
        function initMap() {
            var mapDiv = document.getElementById('map');
            var map = new google.maps.Map(mapDiv, {
                center: {lat: 34.0012644, lng: -6.8479476},
                zoom: 18
            });
        }
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?callback=initMap"async defer></script>
{% endblock %}